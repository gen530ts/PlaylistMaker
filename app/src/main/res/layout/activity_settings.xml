<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim56"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dim4"
        android:paddingHorizontal="@dimen/dim4">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dim48"
            android:layout_height="@dimen/dim48"
            android:padding="@dimen/dim12"
            android:contentDescription="@string/back"
            android:foreground="?attr/selectableItemBackground"
            app:srcCompat="@drawable/back" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/dim12"
            android:paddingTop="10dp"
            android:paddingEnd="86dp"
            android:paddingBottom="@dimen/dim12"
            android:text="@string/settings"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/dim22sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim61"
        android:layout_marginTop="@dimen/dim24"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dim21"
            android:layout_marginStart="@dimen/dim16"
            android:text="@string/dark"
            android:textColor="@color/black"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dim21"
            android:layout_marginEnd="@dimen/dim12"
            android:layout_gravity="center"
            tools:ignore="TouchTargetSizeCheck"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim61"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dim21"
            android:layout_marginStart="@dimen/dim16"
            android:text="@string/share"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim19"
            android:layout_marginEnd="@dimen/dim12"
            android:layout_marginBottom="@dimen/dim18"
            android:contentDescription="@string/share"
            app:srcCompat="@drawable/share"
            android:foregroundTint="@color/yp_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim61"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dim21"
            android:layout_marginStart="@dimen/dim16"
            android:text="@string/support"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim19"
            android:layout_marginEnd="@dimen/dim14"
            android:layout_marginBottom="@dimen/dim18"
            android:contentDescription="@string/support"
            app:srcCompat="@drawable/support"
            android:foregroundTint="@color/yp_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim61"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dim21"
            android:layout_marginStart="@dimen/dim16"
            android:text="@string/agree"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim19"
            android:layout_marginEnd="@dimen/dim12"
            android:layout_marginBottom="@dimen/dim18"
            android:contentDescription="@string/support"
            app:srcCompat="@drawable/agree"
            android:foregroundTint="@color/yp_gray"/>
    </LinearLayout>
</LinearLayout>
