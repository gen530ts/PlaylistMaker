<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <Button
        android:id="@+id/playListsBt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dim24"
        android:backgroundTint="?attr/colorOnPrimary"
        android:fontFamily="@font/ys_display_medium"
        android:paddingStart="@dimen/dim14"
        android:paddingTop="@dimen/dim10"
        android:paddingEnd="@dimen/dim14sp"
        android:paddingBottom="10dp"
        android:text="@string/new_playlist"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/dim14sp"
        app:cornerRadius="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/playListsIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="106dp"
        android:src="@drawable/not_media"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone"
        />

    <TextView
        android:id="@+id/playListsTV"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="242dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/not_create_playlist"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playListsRecycler"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dim16"
        android:layout_marginBottom="@dimen/dim16"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:spanCount="2"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/playListsBt"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="5"

        tools:layout_editor_absoluteX="16dp"
        tools:listitem="@layout/play_lists_img" />


</androidx.constraintlayout.widget.ConstraintLayout>
