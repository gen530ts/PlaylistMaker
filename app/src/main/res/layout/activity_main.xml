<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical"
    android:paddingStart="@dimen/dim20"
    android:paddingEnd="@dimen/dim20">

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim56"
        android:paddingTop="14dp"
        android:paddingBottom="@dimen/dim16"
        android:text="@string/playlist_maker"
        android:textColor="@color/yp_white"
        android:textSize="@dimen/dim22sp"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"/>

    <Button
        android:id="@+id/searchButton"
        style="@style/MainPageBtnStyle"
        android:layout_marginTop="@dimen/dim24"
        android:text="@string/search_str"
        app:icon="@drawable/search" />

    <Button
        android:id="@+id/mediaButton"
        style="@style/MainPageBtnStyle"
        android:text="@string/media_str"
        app:icon="@drawable/media" />

    <Button
        android:id="@+id/settingsButton"
        style="@style/MainPageBtnStyle"
        android:layout_marginBottom="@dimen/dim24"
        android:text="@string/settings_str"
        app:icon="@drawable/settings" />

</LinearLayout>