<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    tools:context=".ui.playlists.PlayListsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim56"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dim4"
        android:paddingVertical="@dimen/dim4">

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="@dimen/dim48"
                android:layout_height="@dimen/dim48"
                android:padding="@dimen/dim12"
                app:srcCompat="@drawable/back" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/settingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:paddingStart="@dimen/dim12"
            android:paddingTop="10dp"
            android:paddingEnd="86dp"
            android:paddingBottom="@dimen/dim12"
            android:text="@string/create_playlist"
            android:textColor="?attr/colorOnPrimary"
            android:textFontWeight="500"
            android:textSize="@dimen/dim22sp" />
    </LinearLayout>


        <ImageView
            android:id="@+id/coverIvPl"
            android:layout_width="@dimen/dim312"
            android:layout_height="@dimen/dim312"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim24"
            android:background="@drawable/shape_iv_new_playlist"
            android:src="@drawable/add_photo"
            android:scaleType="centerInside"/>

    <EditText
        android:id="@+id/enterPlName"
        android:hint="@string/create_pl_name"
        android:textSize="@dimen/dim16sp"
        android:textColor="?attr/colorOnPrimary"
        android:layout_width="328dp"
        android:layout_height="@dimen/dim56"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim32"
        android:paddingHorizontal="@dimen/dim16"
        android:background="@drawable/shape_et_new_playlist"/>
    <EditText
        android:id="@+id/enterPlDescr"
        android:hint="@string/create_pl_descr"
        android:textSize="@dimen/dim16sp"
        android:textColor="?attr/colorOnPrimary"
        android:layout_width="328dp"
        android:layout_height="@dimen/dim56"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim16"
        android:paddingHorizontal="@dimen/dim16"
        android:background="@drawable/shape_et_new_playlist"/>
    <Space
        android:layout_width="@dimen/dim0"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createPlBtn"
        android:layout_width="326dp"
        android:layout_height="44dp"
        android:layout_marginBottom="@dimen/dim32"
        android:layout_gravity="center"
        android:background="@drawable/btn_new_playlist_bg"
        android:text="@string/create_pl_start"
        android:textColor="@color/yp_white"
        android:fontFamily="@font/ys_display_medium"
        android:textAllCaps="false"
        android:textSize="@dimen/dim16sp"
        android:backgroundTintMode="screen"
        android:enabled="false"/>

</LinearLayout>

