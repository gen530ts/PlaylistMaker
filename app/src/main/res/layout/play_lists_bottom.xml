<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim61"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/coverCardView"
        style="@style/SearchTrackCoverIV"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="2dp"
        app:cardElevation="@dimen/dim0">

        <ImageView
            android:id="@+id/coverPlIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/placeholder_track"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="@dimen/dim250"
        android:layout_height="@dimen/dim33"
        android:layout_marginStart="@dimen/dim8"
        android:layout_marginTop="@dimen/dim14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namePl"
            style="@style/SearchTrackUpTV"
            tools:text="PlayList name" />

        <TextView
            android:id="@+id/numberTrack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim13"
            android:layout_marginTop="@dimen/dim1"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:singleLine="true"
            android:textColor="?attr/testColor"
            android:textSize="@dimen/dim11sp"
            tools:text="NumberOfTracks" />

    </LinearLayout>
</LinearLayout>
