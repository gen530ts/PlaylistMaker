<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim61"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/coverPlIv"
        app:srcCompat="@drawable/placeholder_track"
        android:layout_marginStart="@dimen/dim13"
        style="@style/SearchTrackCoverIV" />

    <LinearLayout
        android:layout_width="@dimen/dim250"
        android:layout_height="@dimen/dim33"
        android:layout_marginStart="@dimen/dim8"
        android:layout_marginTop="@dimen/dim14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namePl"
            style="@style/SearchTrackUpTV"
            tools:text="PlayList name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numberTrack"
                style="@style/SearchTrackLeftDownTV"
                tools:text="NumberOfTracks"/>




        </LinearLayout>

    </LinearLayout>


</LinearLayout>