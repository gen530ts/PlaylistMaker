<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim61"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/coverImageView"
        android:layout_width="@dimen/dim45"
        android:layout_height="@dimen/dim45"
        android:layout_marginStart="@dimen/dim13"
        android:layout_marginTop="@dimen/dim8"
        app:srcCompat="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="@dimen/dim250"
        android:layout_height="@dimen/dim33"
        android:layout_marginStart="@dimen/dim8"
        android:layout_marginTop="@dimen/dim14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/songTextView"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_height="@dimen/dim19"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="@dimen/dim16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creatorTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/ys_display_regular"
                android:maxWidth="@dimen/dim173"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/dim11sp"
                android:ellipsize="end"
                android:singleLine="true"/>

            <ImageView
                android:id="@+id/dotImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dot_track_search" />

            <TextView
                android:id="@+id/lengthTextView"
                android:layout_width="@dimen/dim64"
                android:layout_height="match_parent"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="top"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/dim11sp" />


        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/forwardImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim18"
        android:layout_marginEnd="@dimen/dim12"
        app:srcCompat="@drawable/arrow_forward_track" />
</LinearLayout>
