<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim61"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/coverImageView"
        app:srcCompat="@drawable/placeholder_track"
        style="@style/SearchTrackCoverIV" />

    <LinearLayout
        android:layout_width="@dimen/dim250"
        android:layout_height="@dimen/dim33"
        android:layout_marginStart="@dimen/dim8"
        android:layout_marginTop="@dimen/dim14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/songTextView"
            style="@style/SearchTrackUpTV"
            tools:text="song song song song song song song song "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creatorTextView"
                style="@style/SearchTrackLeftDownTV"
                tools:text="artist_name"/>

            <ImageView
                android:id="@+id/dotImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dot_track_search" />

            <TextView
                android:id="@+id/lengthTextView"
                style="@style/SearchTrackRightDownTV"
                tools:text="00:00"/>


        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/forwardImageView"
        app:srcCompat="@drawable/arrow_forward_track"
        style="@style/SearchTrackRightIV" />
</LinearLayout>
